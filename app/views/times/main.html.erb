<style>
	.container{
		margin:0 auto;
		width:950px;
	}

	.time_container{
		text-align: center;
	}

	.time_info{
		margin: 0 auto;
		width:190px;
	}
</style>


<div class="container">
	<div class="time_container">
		<h1>The Current Date and Time:</h1>
		<div class="time_info well well-small">
			<!-- Manipulate the date format using strftime  -->
			<h3><%= @time.strftime("%b %d, %Y") %></h3>
			<h3><%= @time.strftime("%I:%M %p") %></h3>
	    </div>
	</div>
</div>